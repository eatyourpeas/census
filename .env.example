DEBUG=False
SECRET_KEY=change-me
ALLOWED_HOSTS=localhost,127.0.0.1
DATABASE_URL=postgres://postgres:postgres@localhost:5432/census
SECURE_SSL_REDIRECT=True # Set to False if not using HTTPS
CSRF_TRUSTED_ORIGINS=
BRAND_TITLE=Census
BRAND_ICON_URL=/static/favicon.ico
BRAND_THEME=census
BRAND_FONT_HEADING='IBM Plex Mono', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji'
BRAND_FONT_BODY=Merriweather, ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif
BRAND_FONT_CSS_URL=https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;600;700&family=Merriweather:wght@300;400;700&display=swap
# hCaptcha Configuration
# Get these from https://hcaptcha.com/
HCAPTCHA_SITEKEY=your_site_key
HCAPTCHA_SECRET=your_secret_key

# Email Configuration
# The email backend is automatically selected based on DEBUG setting:
#   - DEBUG=True (development): console backend (emails printed to terminal)
#   - DEBUG=False (production): SMTP backend (any SMTP provider)
# You can override this by setting EMAIL_BACKEND explicitly:
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Email settings
DEFAULT_FROM_EMAIL=no-reply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# SMTP Configuration (only needed in production when DEBUG=False)
# Census works with ANY SMTP provider. Choose one and configure below:

# --- Option 1: Mailgun (Recommended) ---
# Get credentials from: https://app.mailgun.com/app/sending/domains
EMAIL_HOST=smtp.eu.mailgun.org
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=postmaster@mg.yourdomain.com
EMAIL_HOST_PASSWORD=your-mailgun-smtp-password

# --- Option 2: Gmail ---
# Note: Use App Password, not your regular Gmail password
# Generate at: https://myaccount.google.com/apppasswords
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=youremail@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password

# --- Option 3: SendGrid ---
# Get API key from: https://app.sendgrid.com/settings/api_keys
# Note: Username is literally "apikey"
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# --- Option 4: Amazon SES ---
# Get SMTP credentials from AWS SES console
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-ses-smtp-username
# EMAIL_HOST_PASSWORD=your-ses-smtp-password

EMAIL_TIMEOUT=10

# External Dataset API (required)
# Used for fetching prefilled dropdown options (hospitals, NHS trusts, etc.)
# Get your free API key from: https://api.rcpch.ac.uk
EXTERNAL_DATASET_API_URL=https://api.rcpch.ac.uk
EXTERNAL_DATASET_API_KEY=your-rcpch-api-key-here


# OIDC Configuration
OIDC_RP_CLIENT_ID_AZURE=census-client-id
OIDC_RP_CLIENT_SECRET_AZURE=census-client-secret
OIDC_OP_TENANT_ID_AZURE=your-tenant-id

OIDC_RP_CLIENT_ID_GOOGLE = 'your-google-client-id'
OIDC_RP_CLIENT_SECRET_GOOGLE = 'your-google-client-secret'


# Redirect configuration
OIDC_RP_SIGN_ALGO = 'RS256'
OIDC_OP_JWKS_ENDPOINT_GOOGLE = 'https://www.googleapis.com/oauth2/v3/certs'
OIDC_OP_JWKS_ENDPOINT_AZURE = 'https://login.microsoftonline.com/common/discovery/v2.0/keys'
